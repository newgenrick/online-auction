<% include partials/header%>
<br><br>
<div class="container">
    <div class="row text-center">
        
        <div style="width:30%; margin: 27px auto;">
            <h3>Update Product : <%= product.prod_name%></h3><br>
           
            <form action = "/products/<%=product._id%>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input type="text" name = "prod_name" placeholder="Enter product name" class="form-control" value="<%=product.prod_name%>" required>
                </div>
                <div class="form-group">
                    <input type="number" name = "prod_base_price" min = 1000 placeholder="Enter base price" class="form-control" value="<%=product.prod_base_price%>" required>
                </div>
                <div class="form-group">
                    <textarea name= "prod_desc" placeholder="Enter product description.." class="form-control" required><%=product.prod_desc%></textarea>
                </div>
                <div class="form-group">
                    <input type="text" name = "prod_image_link"  placeholder="Enter image link" class="form-control" value="<%=product.prod_image_link%>" required>
                </div>
                <div class="form-group">
                    <select name="prod_category"class="form-control" value="<%=product.prod_category%>" required>
                        <option value="">--Choose Category--</option>
                        <option value="electronics">Electronics</option>
                        <option value="clothing">Clothing</option>
                        <option value="furniture">Furniture</option>
                        <option value="others">Others</option>
                    </select>
                </div>
                
                <button type="submit" class="btn btn-block btn-success btn-lg"> Update Product</button>
            </form> 
                        
            
        </div>
    </div>
    
</div>


   